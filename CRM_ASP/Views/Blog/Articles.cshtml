@model IEnumerable<Article>
    <div class="home-inner container">
        <div class="row">
            <div class="col">
                <div class="card-columns">
                    @foreach (var art in Model)
                    {
                        <div class="card">
                            <a asp-action="Show" asp-route-id="@art.id">
                                <img style="width: 300px; height: 300px; width: 100%; object-fit: cover;" src="data:image/jpeg;base64,@(Convert.ToBase64String(art.imageData))" alt="" class="img-fluid card-img-top">
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">@art.thread</h4>
                                <small class="text-muted">Автор: @art.author, @art.create_date.ToShortDateString()</small>
                                <hr>
                                <p class="card-text">
                                    @art.brief
                                </p>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>



        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <div class="m-4">
                <a asp-action="Create" class="btn btn-primary btn-block">Новая статья</a>
            </div>

        }
    </div>
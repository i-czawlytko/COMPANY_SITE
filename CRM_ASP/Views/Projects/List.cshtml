@model IEnumerable<Project>

    <div class="home-inner container">
        <div class="card-columns">
            @foreach (var prj in Model)
            {
                <div class="card">
                    <img class="card-img-top img-fluid" style='width:300px; height:200px; object-fit: cover' src="data:image/jpeg;base64,@(Convert.ToBase64String(prj.imageData))" />
                    <div class="card-body">
                        <h4 class="card-title">@prj.name</h4>
                        <p class="card-text">
                            @prj.thread
                        </p>
                    </div>
                </div>
            }

            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-action="Create" class="btn btn-primary btn-block">Добавить</a>
            }
        </div>
    </div>  